<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sharexn.www.study2.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sun"
                android:gravity="center"
                android:orientation="vertical"
                android:src="@mipmap/sun"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:text="北京" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="天气" />
            <TextView
                android:id="@+id/weather_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="晴" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/thermometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="温度" />
            <TextView
                android:id="@+id/thermometer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="-4C" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pm25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="Pm.25" />
            <TextView
                android:id="@+id/pm25_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="255" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clothes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="穿衣" />
            <TextView
                android:id="@+id/clothes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="冷" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tourism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="旅游" />
            <TextView
                android:id="@+id/tourism_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="较适宜" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="感冒" />
            <TextView
                android:id="@+id/health_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="易发生" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="1"
                android:text="运动" />
            <TextView
                android:id="@+id/game_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="较不宜" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/day_next_1"
            android:clickable="true"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" android:gravity="center_horizontal"
            android:layout_marginRight="1dp"
            android:layout_gravity="fill_horizontal"
            >
            <TextView
                android:id="@+id/day_next_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="周六"
                />
            <TextView
                android:id="@+id/day_next_1_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="15C~19C"
                />
            <TextView
                android:id="@+id/day_next_1_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="15C~19C"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/day_next_2"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" android:gravity="center_horizontal"
            android:layout_marginRight="1dp"
            android:layout_gravity="fill_horizontal"
            >
            <TextView
                android:id="@+id/day_next_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="周日"
                />
            <TextView
                android:id="@+id/day_next_2_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="13C~14C"
                />
            <TextView
                android:id="@+id/day_next_2_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="15C~19C"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_next_3"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" android:gravity="center_horizontal"
            android:layout_gravity="fill_horizontal"
            >
            <TextView
                android:id="@+id/day_next_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="周一"
                />
            <TextView
                android:id="@+id/day_next_3_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="12C~14C"
                />
            <TextView
                android:id="@+id/day_next_3_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="15C~19C"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
